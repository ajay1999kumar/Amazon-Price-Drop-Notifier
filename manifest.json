{
    "manifest_version":2,
    "name":"Amazon-price-drop-notification",
    "version":"1.0",
    "content_scripts":[
        {
            "matches":
            [
                "https://www.amazon.in/*",
                "https://www.amazon.com/*"
            ],
            "js":[
               
                "jquery.js",
                "popup.js"
            ]
        }
    ],
    
    "permissions":[
        "tabs",
        "https://www.amazon.in/*",
        "https://www.amazon.com/*"
       
        
    ],
    "background":{
        "scripts":[
            "jquery.js",
            "background.js",
            "newtab.js"
        ]
    },
    "icons":{

        "16":"amazon_icon_16.png",
        "48":"amazon_icon_48.png",
        "128":"amazon_icon_128.png"

    },
    "browser_action":{
        "default_icon":"amazon_icon_16.png"
    },
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://cdnjs.cloudflare.com; object-src 'self'"
    


}