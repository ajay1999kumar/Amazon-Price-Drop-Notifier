{
    "manifest_version":2,
    "name":"Amazon-price-drop-notification",
    "version":"1.0",
    "content_scripts":[
        {
            "matches":
            [
                "https://www.amazon.in/*",
                "https://www.amazon.com/*"
            ],
            "js":[
                "content.js"
            ]
        }
    ],
    "background":{
        "scripts":[
            "background.js"
        ]
    },
    "icons":{

        "16":"amazon_icon_16.png",
        "48":"amazon_icon_48.png",
        "128":"amazon_icon_128.png"

    },
    "browser_action":{
        "default_icon":"amazon_icon_16.png",
        "default_popup":"popup.html"
     
    }


}